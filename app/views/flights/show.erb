<h2><%= @flight.callsign %></h2>

<% if flash.has?(:message) %>
  <%= flash[:message] %><br>
<% end %>

<ul>
  <li>Date of Flight: <%= @flight.flight_date %></li>
  <li>Instructor: <a href="/instructors/<%= @flight.instructor.slug %>"><%= @flight.instructor.name %></a></li>
  <li>Student: <a href="/students/<%= @flight.student.slug %>"><%= @flight.student.name %></a></li>
  <li>Mission Type: <%= @flight.mission_type %></li>
  <li>Mission Number: <%= @flight.mission_number%></li>
  <li>Duration: <%= @flight.duration %></li><br>
</ul>
<% if instructor_logged_in? && current_instructor == @flight.instructor %>
  <form action="/flights/<%= @flight.id %>/delete" method="GET">
    <input type="submit" value="Delete Flight">
  </form>
  <form action="/flights/<%= @flight.id %>/edit" method="GET">
    <input type="submit" value="Edit Flight">
  </form>
<% end %>
<form action="/logout" method="GET">
  <input type="submit" value="Logout">
</form>
