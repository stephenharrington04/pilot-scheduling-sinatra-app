<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Pilot Scheduling</title>
  </head>
  <body>
    <div id="log-in">
      <% if student_logged_in? %>
        <a href="/students/<%= current_student.slug %>"><%= current_student.name %></a>
      <% elsif instructor_logged_in? %>
        <a href="/instructors/<%= current_instructor.slug %>"><%= current_instructor.name %></a>
      <% else %>
        <a href="/">Log in here.</a></h2>
      <% end %>
      <br>
      <% if student_logged_in? || instructor_logged_in? %>
        <a href="/logout">Sign Out</a>
      <% end %>
    </div>
    <header>
      <h2>Pilot Scheduling Application</h2>
      <nav>
        <a href="/">Home</a>
        <a href="/flights">Flights</a>
        <a href="/instructors">Instructors</a>
        <a href="/students">Students</a>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
